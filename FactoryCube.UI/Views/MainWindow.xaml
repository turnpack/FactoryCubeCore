<Window x:Class="FactoryCube.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryCube.UI"
        Title="FactoryCube" Height="800" Width="1200"
        mc:Ignorable="d">

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" />
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Toggle Log Window" />
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Start Preview" Command="{Binding StartPreviewCommand}" />
            <Button Content="Stop Preview" Command="{Binding StopPreviewCommand}" />
            <ComboBox ItemsSource="{Binding CameraList}"
                      SelectedItem="{Binding SelectedCamera}"
                      Width="200"/>
        </ToolBar>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding StatusMessage}" />
        </StatusBar>

        <!-- Main Workspace -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Main Image -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
                <!-- Log area -->
            </Grid.RowDefinitions>

            <!-- Left Panel (Navigation / Tool Tree) -->
            <TabControl Grid.Row="0" Grid.Column="0">
                <TabItem Header="Operations">
                    <TreeView>
                        <TreeViewItem Header="Scan Setup" />
                        <TreeViewItem Header="Camera" />
                        <TreeViewItem Header="Image Processing" />
                        <TreeViewItem Header="Stitching" />
                    </TreeView>
                </TabItem>
                <TabItem Header="Recipe">
                    <ListBox>
                        <ListBoxItem Content="New Recipe"/>
                        <ListBoxItem Content="Load Recipe"/>
                    </ListBox>
                </TabItem>
            </TabControl>

            <!-- Main Image Area -->
            <!-- Main Image Area -->
            <Grid Grid.Column="1" Grid.Row="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Start Preview" Command="{Binding StartPreviewCommand}" Margin="0,0,10,0"/>
                    <Button Content="Stop Preview" Command="{Binding StopPreviewCommand}" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding AvailableCameras}"
                          SelectedItem="{Binding SelectedCamera}"
                          DisplayMemberPath="Name"
                          Width="150" />
                </StackPanel>

                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
                    <Image Grid.Row="1" Source="{Binding LiveImage}" Stretch="Uniform" />
                </Border>
            </Grid>



            <!-- Log Output -->
            <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                     Margin="5"
                     FontFamily="Consolas"
                     FontSize="12"
                     Text="{Binding LogOutput}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </Grid>
    </DockPanel>
</Window>
